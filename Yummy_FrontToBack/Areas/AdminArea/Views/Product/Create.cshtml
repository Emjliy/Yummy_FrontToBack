@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}
<h1>Create Product</h1>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New Product</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo">New Product</label>
                        <input asp-for="Photo" class="form-control">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                        @*<input type="type" name="name" value="" placeholder="description"/>*@
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>


