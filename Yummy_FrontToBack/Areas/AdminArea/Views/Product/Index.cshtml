@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h1>Product</h1>
<table class="table table-striped table-dark">
    <a class="btn btn-success" asp-action="Create">Create New Product</a>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Products</th>
            @*<th scope="col">RelatedCategory</th>*@
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var products in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td><img src="~/assets/images/@products.ProductImages.FirstOrDefault().URL" alt="Alternate Text" /></td>
                @*<td>@products.ProductCategories.FirstOrDefault()</td>*@
                <td>@Html.Raw(products.Title)</td>
                <td>@products.Price</td>
                <td>@products.Description</td>
                <td> <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@products.ID"><i class="mdi mdi-delete"></i></a></td>
                <td> <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@products.ID"><i class="mdi mdi-lead-pencil"></i></a></td>
            </tr>
            count++;
        }
    </tbody>
</table>

